<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resturant_description">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-130dp"
                app:srcCompat="@drawable/ayu"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:text="@string/ramen_hamakaze_colombo" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="-3dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/fivestar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/description" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/description1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/restaurant_info" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_laptop" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/visit_website" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_call" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/contact" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_email" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/email" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_action_achievement" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/certificate" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_action_clock" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/open_now" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/ic_edit_location" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/location" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/comments" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/comment" />

            <Button
                android:id="@+id/button11"
                android:background="#FFBF40"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Enter" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/break4" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/break1" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/break6" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/break2" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/break3" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>